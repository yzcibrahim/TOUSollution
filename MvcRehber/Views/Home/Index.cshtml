@model List<Person>
@{
    ViewData["Title"] = "Home Page";
}
@{Layout = null;}
<style>
    th,td {
        border: 1px solid #dddddd;
        padding:8px;
    }
    table {
        font-family: arial, sans-serif;
        width: 33%;
        border-collapse: collapse;
        margin-left: auto;
        margin-right: auto;
    }
    tr:nth-child(2n) {
        background-color: #dddddd;
    }
</style>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
    <div><a asp-action="CreatePerson" style="margin-left: 34%;">Yeni Kişi</a></div>
    <table>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Telefon</th>
            <th></th>
        </tr>
        @{
            foreach (Person kisi in Model)
            {
                <tr>
                    <td>@kisi.Id</td>
                    <td>@kisi.Name</td>
                    <td>@kisi.Surname</td>
                    <td>@kisi.Phone</td>
                    <td><a onclick="return eminMisiniz(@kisi.Id)" asp-route-id="@kisi.Id" asp-action="Delete" >Sil</a>
                        <a  asp-route-id="@kisi.Id" asp-action="CreatePerson">Düzenle</a>
                    </td>
                </tr>
            }
        }



    </table>
</div>

<script>
    function eminMisiniz(id) {
      //  alert(id + " id li Kayıt silinecek emin misiniz?");
        var dialogResult = confirm(id + " id li Kayıt silinecek emin misiniz?");
        console.log(dialogResult);
        return dialogResult;
    }
</script>
